# chronos.conf
# Generated by Ansible for {{ansible_fqdn}}

description "Chronos scheduler for Mesos"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

# Custom local
script
  exec java \
    {{ runtime_memory_options }} \
    -Djava.library.path={{ runtime_lib_path }} \
    -cp {{ runtime_chronos_jar }} com.airbnb.scheduler.Main \
    --zk_hosts {{ runtime_zookeeper_hosts }} \
    --master {{ runtime_master }} \
    --http_port {{http_port}} \
    --https_port {{https_port}}

end script
