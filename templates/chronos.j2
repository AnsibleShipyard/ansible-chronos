# chronos.conf
# Generated by Ansible for {{ansible_fqdn}}

description "Chronos scheduler for Mesos"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

# Custom local
script
  exec java \
    {{ chronos_runtime_memory_options }} \
    -Djava.library.path={{ chronos_runtime_lib_path }} \
    -cp {{ chronos_runtime_chronos_jar }} com.airbnb.scheduler.Main \
    --zk_hosts {{ chronos_runtime_zookeeper_hosts }} \
    --master {{ chronos_runtime_master }} \
    --http_port {{ chronos_http_port }} \
    --https_port {{ chronos_https_port }}

end script
